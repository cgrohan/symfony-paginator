{% extends "base.html.twig" %}



{% block body %}

{# total items count 
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>#}
<table class="table">
    <tr>
        {# sorting of properties based on query components #}
        <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
        <th{% if pagination.isSorted('a.name') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'Name', 'a.name') }}
        </th>
        <th{% if pagination.isSorted('a.content') %} class="sorted"{% endif %}>
            {{ knp_pagination_sortable(pagination, 'Content', 'a.content') }}
        </th>
    </tr>

    {# table body #}
    {% for article in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td>{{ article.id }}</td>
            <td>{{ article.name }}</td>
            <td>{{ article.content }}</td>
        </tr>
    {% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>

{% endblock %}